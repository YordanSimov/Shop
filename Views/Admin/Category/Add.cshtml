@section Scripts{
   <script>
       function AddAnotherSubCategory(){
       $("#subCategory").append("<div class='form-control-sm m-0 p-0 mt-1 mb-1 pt-1'><input type='text' name='SubCategory' placeholder='SubCategory' class='form-control-sm'  />")
       }

       $(".js-example-tags").select2({
  tags: true
});
   </script>
}